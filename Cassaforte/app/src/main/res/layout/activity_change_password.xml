<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.matteo.cassaforte.ChangePassword">

    <TextView
        android:id="@+id/textOldPass"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="43dp"
        android:layout_marginTop="33dp"
        android:text="Vecchia password"
        android:textColor="@color/colorAccent" />

    <TextView
        android:id="@+id/textNewPass"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/old1"
        android:layout_below="@+id/old1"
        android:layout_marginTop="25dp"
        android:text="Nuova Password"
        android:textColor="@color/colorAccent" />

    <EditText
        android:id="@+id/old1"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/textOldPass"
        android:layout_below="@+id/textOldPass"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:inputType="number" />

    <EditText
        android:id="@+id/new1"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/textNewPass"
        android:layout_below="@+id/textNewPass"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:inputType="number" />

    <Button
        android:id="@+id/press"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/new1"
        android:layout_below="@+id/new1"
        android:layout_marginTop="21dp"
        android:text="Confirm Password" />

    <Button
        android:id="@+id/returnHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/press"
        android:layout_alignStart="@+id/press"
        android:layout_below="@+id/press"
        android:layout_marginTop="20dp"
        android:text="Return Home" />
</RelativeLayout>
